<div>
  <h2>CREATE A GROUP</h2>

  <%= form_for (@group) do |f| %>
    <div>
      <%= f.label :name, 'Group name:' %><br />
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description, 'Description:' %><br />
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.submit 'Create group' %>
    </div>
  <% end %>
</div>
